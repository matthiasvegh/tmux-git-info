#!/usr/bin/env bash

tmux_pwd="$(tmux showenv $(tmux display -p 'TMUX_PWD_#D') | sed 's/^.*=//' )"

cd $tmux_pwd
echo $PWD

git_branch_name() {
	echo $(git symbolic-ref HEAD 2>/dev/null | awk -F/ {'print $NF'})
}

git_num_untracked_files() {
	echo $(git status --porcelain 2>/dev/null | grep "^??" | wc -l)
}
